{
  "expo": {
    "plugins": [
      [
        "expo-image-picker",
        {
          "photosPermission": "The app accesses your photos to let you share them with your friends."
          
        }
      ]
    ]  ,
    "name": "Obligatorio_dispositivos_moviles",
    "slug": "Obligatorio_dispositivos_moviles",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "light",
    "splash": {
      "image": "./assets/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true,
      "infoPlist": {
        "NSMusicUsageDescription": "Permite reproducir música en la aplicación."
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "permissions": [
          "READ_EXTERNAL_STORAGE"
        ],          
        "backgroundColor": "#ffffff"
      },
       "permissions": [
      "READ_EXTERNAL_STORAGE"
    ]
    },
   
    "web": {
      "favicon": "./assets/favicon.png"
    }
  }
}
